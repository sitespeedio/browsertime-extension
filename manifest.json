{
  "name": "Browsertime",
  "version": "0.4.0",
  "description": "Extension to run inside Browsertime to block requests and add request headers.",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "all_frames": false,
      "js": ["script.js"],
      "matches": ["http://127.0.0.1/*"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "browsingData",
    "privacy",
    "cookies",
    "http://*/*",
    "https://*/*"
  ],
  "icons": { "128": "browsertime-128.png" },
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "browsertime-extension@sitespeed.io",
      "strict_min_version": "52.0"
    }
  }
}
