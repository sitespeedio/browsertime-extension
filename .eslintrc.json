{
  "root": true,
  "env": {
    "es6": true,
    "browser": true
  },
  "globals": {
    "chrome": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "plugins": ["prettier"],
  "extends": "eslint:recommended",
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ],
    "no-extra-semi": 0,
    "no-mixed-spaces-and-tabs": 0
  }
}
